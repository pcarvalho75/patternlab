<Window x:Class="SimpleChart.Charts.ChartPlayGround"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc ="clr-namespace:SimpleChart.Charts"
    Title="ChartPlayGround" Height="589" Width="1008" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <WrapPanel >
            <uc:BarChart x:Name="chart1"
                         FontFamily="Tahoma"
                         Background="White" Margin="0 0 0 0" 
                         ShowHorizontalGridLine="True" 
                         HorizontalAlignment="Center">
            </uc:BarChart>
        </WrapPanel>
    
        <Border Grid.Column="1" BorderBrush="DarkGray" BorderThickness="1" Margin="10"/>
        <Button x:Name="ButtonPlot" Content="Plot" Margin="0,71,35,0" VerticalAlignment="Top" Click="ButtonPlot_Click" HorizontalAlignment="Right" Width="75"/>
        <Button x:Name="ButtonPlot2" Content="Plot" Margin="0,98,35,0" VerticalAlignment="Top" Click="ButtonPlot_Click_1" HorizontalAlignment="Right" Width="75"/>
        <Button x:Name="ButtonPlot3" Content="Plot" Margin="0,124.96,35,0" VerticalAlignment="Top" Click="ButtonPlot_Click_2" HorizontalAlignment="Right" Width="75"/>

    </Grid>

</Window>
